<h1><%=@the_user.username%></h1>
<%#=params.inspect%>
<%#=@the_user.inspect%>

<dl>
  <dt>ID</dt>
  <dd><%=@the_user.id=%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/users/<%=@the_user.username%>">
      <label for="username_field">Username</label>
      <input type="text" name="username" id="username_field" value=<%=@the_user.username=%>>
      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%=@the_user.own_photos.size%>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @the_user.own_photos.each do |a_photo|%>
    <tr>
      <td><img src="<%=a_photo.image%>" alt="random robot picture"></td>
      <td>
        <%#=User.where({:id => a_photo.owner_id})[0].username%>
        <%=a_photo.poster.username%>
      </td>
      <td><%=a_photo.caption%></td>
      <td><%=a_photo.created_at%></td>
      <td><a href="/photos/<%=a_photo.poster.username%>">Show details</a></td>
  </tr>
<% end %>
</table>
